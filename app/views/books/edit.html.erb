<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <div class="form">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  <div class="form">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>
  <div class="actions"><%= f.submit 'Upate Book' %></div>

<%= link_to "Show",book_path(@book)%>
|
<%=link_to "Back",books_path %>

<% end %>