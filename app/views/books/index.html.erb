<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @lists.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= list.body %></td>
    <td><%= link_to "Show",book_path(list.id)%></td>
    <td><%= link_to "Edit",edit_book_path_(list.id)%></td>
    <td><%= link_to "Destroy",books_path,method: :delete%></td>
  </tr>
  <% end %>
</tbody>
</table>

<h2>New book</h2>
<%= form_with model:@list,url"/books", local:true do |f| %>
<h4>TItle</h4>
<%= f.text_field :title%>
<h4>Body</h4>
<%= f.text_area :body%>
<%= f.submit "Create Book" %>
<% end %>